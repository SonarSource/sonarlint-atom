{
  "name": "sonarlint",
  "description": "On-the-fly bug and quality issues detection for JavaScript, Python and PHP",
  "version": "1.1.0-SNAPSHOT",
  "icon": "images/sonarlint_wave_128px.png",
  "publisher": "SonarSource",
  "homepage": "http://www.sonarlint.org/atom/index.html",
  "repository": {
    "type": "git",
    "url": "https://github.com/SonarSource/sonarlint-atom.git"
  },
  "bugs": {
    "url": "https://jira.sonarsource.com/browse/SLATOM",
    "email": "sonarlint@googlegroups.com"
  },
  "license": "SEE LICENSE IN LICENSE.txt",
  "engines": {
    "atom": ">=1.17.0 <2.0.0"
  },
  "categories": [
    "Linters"
  ],
  "keywords": [
    "code analysis",
    "linters",
    "lint",
    "php",
    "python",
    "javascript",
    "js",
    "typescript"
  ],
  "qna": "https://groups.google.com/forum/#!forum/sonarlint",
  "main": "./lib/sonarlint",
  "files": [
    "lib",
    "images",
    "files"
  ],
  "package-deps": [
    "atom-ide-ui"
  ],
  "dependencies": {
    "atom-languageclient": "^0.9.2",
    "atom-linter": "^10.0.0",
    "etch": "^0.9.3",
    "expand-home-dir": "0.0.3",
    "find-java-home": "^0.2.0",
    "path-exists": "^3.0.0",
    "atom-package-deps": "^4.6.1"
  },
  "enhancedScopes": [
    "source.js",
    "source.js.jsx",
    "source.ts",
    "source.tsx",
    "text.html.vue",
    "source.python",
    "text.html.php"
  ],
  "consumedServices": {
    "linter-indie": {
      "versions": {
        "2.0.0": "consumeLinterV2"
      }
    },
    "atom-ide-busy-signal": {
      "versions": {
        "0.1.0": "consumeBusySignal"
      }
    },
    "datatip": {
      "versions": {
        "0.1.0": "consumeDatatip"
      }
    },
    "status-bar": {
      "versions": {
        "^1.0.0": "consumeStatusBar"
      }
    }
  },
  "providedServices": {
    "code-actions": {
      "versions": {
        "0.1.0": "provideCodeActions"
      }
    }
  },
  "devDependencies": {
    "del": "^3.0.0",
    "gulp": "^3.9.1",
    "gulp-artifactory-upload": "^1.3.0",
    "gulp-bump": "^3.1.0",
    "gulp-gunzip": "^1.0.0",
    "gulp-run": "^1.7.1",
    "gulp-untar": "0.0.7",
    "gulp-util": "^3.0.8",
    "gulp-zip": "^4.0.0"
  },
  "configSchema": {
    "javaHome": {
      "title": "Java Home",
      "description": "Specifies the folder path to the JRE 8 used to launch the SonarLint Language Server. For example `C:\\Program Files\\Java\\jre1.8.0_131`",
      "type": "string",
      "order": 1
    },
    "extraVmArgs": {
      "title": "Java extra parameters",
      "description": "Additional parameters passed to the JVM used to launch the SonarLint Language Server. For example `[\"-Xmx1024m\"]`. Configure in ~/.atom/config.cson and restart Atom",
      "type": "array",
      "order": 1
    },
    "testFilePattern": {
      "title": "Test File Pattern",
      "description": "Files whose name match this glob pattern are considered as test files",
      "type": "string",
      "default": "{**/test/**,**/*test*,**/*Test*}",
      "order": 1
    },
    "analyzerProperties": {
      "title": "Analyzer Properties",
      "description": "Extra parameters (key-value pairs) to be passed to the analyzers. For example `{\"sonar.javascript.globals\": \"xxx\"}`. Configure in ~/.atom/config.cson and restart Atom",
      "type": "object",
      "default": {},
      "order": 2
    },
    "disableTelemetry": {
      "title": "Disable Telemetry",
      "description": "Disable sending anonymous usage statistics",
      "type": "boolean",
      "default": false,
      "order": 99
    }
  }
}
