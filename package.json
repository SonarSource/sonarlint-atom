{
  "name": "sonarlint",
  "description": "On-the-fly bug and quality issues detection for JavaScript, Python and PHP",
  "version": "1.1.0-SNAPSHOT",
  "icon": "images/sonarlint_wave_128px.png",
  "publisher": "SonarSource",
  "homepage": "http://www.sonarlint.org/atom/index.html",
  "repository": {
    "type": "git",
    "url": "https://github.com/SonarSource/sonarlint-atom.git"
  },
  "bugs": {
    "url": "https://jira.sonarsource.com/browse/SLATOM",
    "email": "sonarlint@googlegroups.com"
  },
  "license": "SEE LICENSE IN LICENSE.txt",
  "engines": {
    "atom": ">=1.17.0 <2.0.0"
  },
  "categories": [
    "Linters"
  ],
  "keywords": [
    "code analysis",
    "linters",
    "lint",
    "php",
    "python",
    "javascript",
    "js"
  ],
  "qna": "https://groups.google.com/forum/#!forum/sonarlint",
  "main": "./lib/sonarlint",
  "files": [
    "lib",
    "images"
  ],
  "dependencies": {
    "sonarlint-atom-files": "github:SonarSource/sonarlint-atom-files#1.0.0",
    "atom-languageclient": "github:SonarSource/atom-languageclient#0.1.2-1.0.0-2",
    "atom-linter": "^10.0.0",
    "expand-home-dir": "0.0.3",
    "find-java-home": "^0.1.4",
    "path-exists": "^3.0.0"
  },
  "bundledDependencies": [
    "sonarlint-atom-files",
    "atom-languageclient",
    "expand-home-dir",
    "find-java-home",
    "path-exists"
  ],
  "consumedServices": {
    "linter-indie": {
      "versions": {
        "2.0.0": "consumeLinterV2"
      }
    }
  },
  "devDependencies": {
    "del": "^3.0.0",
    "gulp": "^3.9.1",
    "gulp-artifactory-upload": "^1.3.0",
    "gulp-bump": "^2.7.0",
    "gulp-gunzip": "^1.0.0",
    "gulp-run": "^1.7.1",
    "gulp-untar": "0.0.6",
    "gulp-util": "^3.0.8",
    "gulp-zip": "^4.0.0"
  },
  "configSchema": {
    "javaHome": {
      "type": "string",
      "default": "",
      "order": 1
    },
    "testFilePattern": {
      "type": "string",
      "default": "{**/test/**,**/*test*,**/*Test*}",
      "order": 1
    },
    "analyzerProperties": {
      "description": "Extra parameters (key-value pairs) to pass to scanners. Configure in ~/.atom/config.cson and restart Atom",
      "type": "object",
      "default": {},
      "order": 2
    },
    "disableTelemetry": {
      "type": "boolean",
      "default": false,
      "order": 99
    }
  }
}
